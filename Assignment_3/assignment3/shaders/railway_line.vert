#version 330 core
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;
layout (location = 2) in vec3 aNormal;
layout (location = 3) in vec3 aForward;

out vec3 vNormal;
out vec3 vForward;
out vec3 vColor;

void main() {
    gl_Position = vec4(aPos, 1.0);
    vNormal = aNormal;
    vForward = aForward;
    vColor = aColor;
}
